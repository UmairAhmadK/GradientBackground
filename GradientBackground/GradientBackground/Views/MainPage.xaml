<?xml version="1.0" encoding="utf-8" ?>
<renderer:GradientContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:renderer="clr-namespace:GradientBackground.Renderers"
                              x:Class="GradientBackground.Views.MainPage"
                              StartColor="{StaticResource gradientStartColor}"
                              EndColor="{StaticResource gradientEndColor}"
                              Direction="ToRight"
                              Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin Forms and Prism!" TextColor="White" />
    </StackLayout>

</renderer:GradientContentPage>